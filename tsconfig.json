{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "lib": [
      "es2024",
      "ESNext.Array",
      "ESNext.Collection",
      "ESNext.Iterator",
      "dom"
    ],
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.ispec.ts",
    "**/test.ts"
  ]
}